---
import Tag from "./icons/Tag.astro";

interface Props {
  date: Date;
  excerpt?: string;
  href: string;
  image?: string;
  alt?: string;
  title: string;
  tags: string[];
}

const { title, date, image, alt, excerpt, href, tags } = Astro.props;
---

<article
  class="rounded-lg border bg-neutral-50 p-4 drop-shadow-xl md:max-w-screen-sm lg:max-w-screen-md"
>
  <a href={href}>
    <div class="flex items-end justify-between">
      <div>
        <h1 class="font-serif text-3xl">{title}</h1>
        <h2 class="inline text-xs font-bold">{date.toDateString()}</h2>
      </div>
      <ol class="space-x-2 text-right">
        {
          tags.map((tag) => (
            <li class="inline">
              <span class="text-xs">
                <Tag class="inline" />
                {tag}
              </span>
            </li>
          ))
        }
      </ol>
    </div>
    <img
      src={image}
      alt={alt || title}
      class="mt-1 h-96 w-full rounded object-cover"
    />
    <p class="mt-4 text-lg">{excerpt}</p>
  </a>
</article>
