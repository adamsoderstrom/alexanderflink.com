---
interface Props {
  title?: string;
  level?: "info" | "warning" | "error" | "success";
}

const { title, level } = Astro.props;
---

{/* TODO: add support for other alert levels */}
<div
  class="border-l-4 border-orange-500 bg-orange-100 p-4 text-orange-700 [&>*]:mb-0"
  role="alert"
>
  <p class="mt-0 font-bold">⚠️ {title}</p>
  <slot />
</div>
