---
import Layout from "~/layouts/Layout.astro";
import Prose from "~/components/Prose.astro";
import BackArrow from "~/components/icons/BackArrow.astro";
import { getEntryBySlug, getCollection } from "astro:content";

export function getStaticPaths() {
  return [{ params: { post: "hello-world" } }];
}

const { post } = Astro.params;
const entry = await getEntryBySlug("blog", post);

const { Content } = await entry.render();
---

<Layout title="Hello World">
  <article class="col-span-full">
    <Prose class="mx-auto mt-4">
      <a
        href="/"
        class="mb-4 flex items-center space-x-2 text-sm text-slate-400 no-underline"
      >
        <BackArrow class="inline size-3" /><span class="inline">Home</span>
      </a>
      <Content />
    </Prose>
  </article>
</Layout>
